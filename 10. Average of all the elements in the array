import java.util.*;
import java.lang.*;
import java.io.*;

class arrayoperations
{
    private static double average(int a[],int n)
    {
        double sum=0.0;
        for(int i=0;i<n;i++)
        {
            sum+=a[i];
        }
        return sum/n;
    }
	public static void main (String[] args) throws java.lang.Exception
	{
		
           int a[]={1,2,3,4};
           System.out.println(average(a,a.length));
	}
}
